@model WebApplication1.DataAccessLibrary.CustomerModel
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row-pb-4">
            <h2 class="table-primary">Create Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="@Model.CustomerName"></label>
            <input asp-for="@Model.CustomerName" class="form-control" />
            <span asp-validation-for="@Model.CustomerName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.CustomerCode"></label>
            <input asp-for="@Model.CustomerCode" class="form-control" />
             <span asp-validation-for="@Model.CustomerCode" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create Customer</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
</form>
@section Scripts{
    @{ 
        <partial name="_ValidationScriptsPartial"/>
    }
}
