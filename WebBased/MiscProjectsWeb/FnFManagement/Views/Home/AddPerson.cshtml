@model Person


<form method="post" asp-action="AddPerson">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Person</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="form-group row">
            <label asp-for="NameFirst" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="NameFirst" class="form-control" />
            </div>
            <span asp-validation-for="NameFirst" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row">
            <label asp-for="NameMiddle" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="NameMiddle" class="form-control" />
            </div>
            <span asp-validation-for="NameMiddle" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row">
            <label asp-for="NameLast" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="NameLast" class="form-control" />
            </div>
            <span asp-validation-for="NameLast" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row">
            <label asp-for="MobileNumber" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="MobileNumber" class="form-control" />
            </div>
            <span asp-validation-for="MobileNumber" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row">
            <label asp-for="EmailId" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input asp-for="EmailId" class="form-control" type="email" placeholder="Enter email">
            </div>
        </div>
        <br />
        <div class="form-group row">
            <label asp-for="AdhaarNumber" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="AdhaarNumber" class="form-control" />
            </div>
            <span asp-validation-for="AdhaarNumber" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <label asp-for="PersonType" class="form-label mt-4">Select Type</label>
            <select asp-for="PersonType" class="form-select">
                <option>1</option>
                <option>2</option>
            </select>
        </div>
        <br /><br />
        <button type="submit" class="btn btn-primary" style="width:150px">Add</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>

@section Scripts{
	@{
    <partial name="_ValidationScriptsPartial" />
	}
}
