@model IEnumerable<Actor>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Actors List</h2>
		</div>
        <div class="col-6 text-end">
            <a asp-controller="Actors" asp-action="AddActor" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; Add New Actor
			</a>
		</div>
	</div>
    <br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(p=>p.ProfilePictureUrl)</th>
            <th>@Html.DisplayNameFor(x=>x.FullName)</th>
            <th>@Html.DisplayNameFor(p=>p.Bio)</th>
            <th>Actions</th>
		</tr>
	</thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="20%" class="align-middle">
                 <img class="rounded-circle" src="@obj.ProfilePictureUrl" alt="@obj.FullName" style="max-width:80%"/>
                 </td>
                <td width="20%" class="align-middle"> @obj.FullName</td>
                 <td width="20%" class="align-middle"> @obj.Bio</td>
                <td class="align-middle">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Actor" asp-action="Edit" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="Actor" asp-action="Details" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Details</a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"
                        class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
					</div>
				</td>
			</tr>
        }
    </tbody>

</table>
</div>